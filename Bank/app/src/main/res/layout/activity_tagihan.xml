<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#64B5F6">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="M-Banking"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/outTagihan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="70dp"
                android:layout_toRightOf="@id/title1"
                android:background="@drawable/close" />

        </RelativeLayout>
    </Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:background="#64B5F6" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txtcek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CEK TAGIHAN"
        android:layout_margin="20dp"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/telp_textfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtcek"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <EditText
            android:id="@+id/notelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:hint="Input Nomor Telphone"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tagihan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/telp_textfield"
            android:layout_marginTop="21dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="-91dp"
            android:text="Rp. 0"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_cek"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@id/telp_textfield"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_blue"
            android:text="Cek"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_bayar"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@id/telp_textfield"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="121dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/button_blue"
            android:text="Bayar"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="277dp"
        android:layout_marginTop="10dp"
        android:background="#64B5F6" />

</LinearLayout>