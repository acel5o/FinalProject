<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:orientation="vertical">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <ImageView
                android:id="@+id/title1"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/telkom"
                />

        </RelativeLayout>
    </Toolbar>

    <View
        android:id="@+id/garis1"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#CE044B" />

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        app:cardCornerRadius="5dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp"
        android:layout_margin="100dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_nomor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:text="081318101857"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <View
                android:id="@+id/garis2"
                android:layout_below="@+id/txt_nomor"
                android:layout_margin="10dp"
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/txtTagih"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/garis2"
                android:text="Tagihan : "
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/rupiah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/garis2"
                android:layout_toRightOf="@id/txtTagih"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/refresh"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/txt_nomor"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:background="@drawable/refresh"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>